; MODULE MEMORY {{{
[module/memory]
type = internal/memory

; Seconds to sleep between updates
interval = 1

format = <bar-used>  <label>
label = %gb_used%

bar-used-indicator =
bar-used-width = 6
bar-used-foreground-0 = ${colors.vibrant-blue}
bar-used-foreground-1 = ${colors.vibrant-blue}
bar-used-foreground-2 = ${colors.vibrant-blue}
bar-used-foreground-3 = ${colors.vibrant-red}
bar-used-foreground-4 = ${colors.vibrant-red}
bar-used-foreground-5 = ${colors.vibrant-red}
bar-used-fill = ‚ñê
bar-used-empty = ‚ñê
bar-used-empty-foreground = ${colors.pastel-white}
;
; }}}
; MODULE NETWORK
[module/network]
type = internal/network

interface = wlp2s0

format-connected = %{A1:nm-connection-editor:}<ramp-signal>%{A} <label-connected>
label-connected = %essid:8%
label-disconnected = %{A1:nm-connection-editor:}[      ]%{A}

ramp-signal-0 = [:.....]
ramp-signal-1 = [::....]
ramp-signal-2 = [:::...]
ramp-signal-3 = [::::..]
ramp-signal-4 = [:::::.]
ramp-signal-5 = [::::::]

;
; }}}
