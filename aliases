# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='cd ../..'
alias ls='ls -G'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias e="$EDITOR"
alias v="$VISUAL"
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# git
alias gci="git pull --rebase && rspec && git push"
alias gl="git log --pretty=oneline --abbrev-commit"
alias gg="git log --graph --oneline --all"
